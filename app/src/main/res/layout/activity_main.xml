<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:id="@+id/ShapeLayout"
        android:background="#ffffff">
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="W"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <EditText
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editTextRecW"
        android:layout_alignTop="@+id/textView"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView"
        android:textSize="10sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="H"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/editTextRecW"
        android:layout_toEndOf="@+id/editTextRecW"/>

    <EditText
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editTextRecH"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/textView2"
        android:layout_toEndOf="@+id/textView2"
        android:textSize="10sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X"
        android:id="@+id/textView3"
        android:layout_alignTop="@+id/editTextRecH"
        android:layout_toRightOf="@+id/editTextRecH"
        android:layout_toEndOf="@+id/editTextRecH"/>

    <EditText
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editTextRecX"
        android:layout_alignTop="@+id/textView3"
        android:layout_toRightOf="@+id/textView3"
        android:layout_toEndOf="@+id/textView3"
        android:textSize="10sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Y"
        android:id="@+id/textView4"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/editTextRecX"
        android:layout_toEndOf="@+id/editTextRecX"
        />

    <EditText
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editTextRecY"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/textView4"
        android:layout_toEndOf="@+id/textView4"
        android:textSize="10sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PaintRec"
        android:id="@+id/textView5"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/editTextRecY"
        android:layout_toEndOf="@+id/editTextRecY"
        />

    <EditText
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:id="@+id/editTextRecPaint"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/editTextPaintCircle"
        android:layout_alignStart="@+id/editTextPaintCircle"
        android:textSize="20sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X"
        android:id="@+id/textView6"
        android:layout_above="@+id/ShapeLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />

    <EditText
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editTextXcircle"
        android:layout_toRightOf="@+id/textView6"
        android:layout_toEndOf="@+id/textView6"
        android:layout_below="@+id/DrawButton"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Y"
        android:id="@+id/textView7"
        android:layout_above="@+id/ShapeLayout"
        android:layout_toRightOf="@+id/editTextXcircle"
        android:layout_toEndOf="@+id/editTextXcircle"
        />

    <EditText
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editTextYcircle"
        android:layout_toRightOf="@+id/textView7"
        android:layout_toEndOf="@+id/textView7"
        android:textSize="20sp"
        android:layout_alignTop="@+id/editTextRcircle"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="R"
        android:id="@+id/textView8"
        android:layout_above="@+id/ShapeLayout"
        android:layout_toRightOf="@+id/editTextYcircle"
        android:layout_toEndOf="@+id/editTextYcircle"/>

    <EditText
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editTextRcircle"
        android:layout_toRightOf="@+id/textView8"
        android:layout_toEndOf="@+id/textView8"
        android:textSize="20sp"
        android:layout_below="@+id/DrawButton"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PaintCircle"
        android:id="@+id/textView9"
        android:layout_above="@+id/ShapeLayout"
        android:layout_toRightOf="@+id/editTextRcircle"
        android:layout_toEndOf="@+id/editTextRcircle"/>

    <EditText
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:id="@+id/editTextPaintCircle"
        android:layout_alignBottom="@+id/editTextRcircle"
        android:layout_toRightOf="@+id/textView9"
        android:layout_toEndOf="@+id/textView9"
        android:textSize="20sp"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:text="DRAW"
        android:id="@+id/DrawButton"
        android:layout_below="@+id/editTextRecY"
        android:layout_alignRight="@+id/ShapeLayout"
        android:layout_alignEnd="@+id/ShapeLayout"/>

</RelativeLayout>
